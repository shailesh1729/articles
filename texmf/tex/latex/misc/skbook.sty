\theoremstyle{plain}
\declaretheorem[parent=chapter,
style=myThmStyle,
refname={axiom,axioms},
Refname={Axiom,Axioms}]{axiom}

\declaretheorem[numbered=no, name=Axiom]{axiom*}

\declaretheorem[parent=chapter,
style=myThmStyle,
refname={theorem,theorems},
Refname={Theorem,Theorems}]{theorem}

% lemma will share the same counter as theorem
\declaretheorem[sibling=theorem,
style=myThmStyle,
refname={lemma,lemmas},
Refname={Lemma,Lemmas}]{lemma}
\declaretheorem[sibling=theorem,
style=myThmStyle,
refname={proposition,propositions},
Refname={Proposition,Propositions}]{proposition}

\declaretheorem[sibling=theorem,
shaded={bgcolor=Azure},
refname={corollary,corollaries},Refname={Corollary,Corollaries}]{corollary}


\declaretheorem[style=myDefStyle,
parent=chapter,refname={definition,definitions},Refname={Definition,Definitions}]{definition}

% Remark will share the same counter as theorem and lemma
\declaretheorem[style=remark, numbered=no]{remark}

\declaretheorem[style=myDefStyle,
numbered=no,refname={challenge,challenges},Refname={Challenge,Challenges}]{challenge}


\declaretheorem[style=exstyle,
parent=chapter,
refname={problem,problems},
Refname={Problem,Problems}]{problem}

\declaretheoremstyle[
  spaceabove=6pt, 
  spacebelow=6pt,
  headfont=\normalfont\bfseries,
  notefont=\mdseries, 
  notebraces={(}{)},
  bodyfont=\normalfont,
  postheadspace=1em,
  headpunct={},
  qed=$\blacktriangleleft$,
  numbered=no
]{solstyle}
\declaretheorem[style=solstyle]{solution}

