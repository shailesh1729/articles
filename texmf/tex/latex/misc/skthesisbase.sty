%-----------------------------------------Theorem Environments-------------------------------------------------------
\declaretheorem[parent=chapter,
refname={theorem,theorems},
Refname={Theorem,Theorems}]{theorem}

\declaretheorem[parent=chapter,
refname={definition,definitions},
Refname={Definition,Definitions}]{definition}

\declaretheorem[parent=chapter, 
refname={lemma,lemmas},
Refname={Lemma,Lemmas}]{lemma}

\declaretheorem[parent=chapter,
refname={proposition,propositions},
Refname={Proposition,Propositions}]{proposition}

\declaretheorem[numberlike=theorem,
refname={corollary,corollaries},
Refname={Corollary,Corollaries}]{corollary}

\declaretheorem[parent=chapter,
refname={axiom,axioms},
Refname={Axiom,Axioms}]{axiom}


\declaretheoremstyle[
bodyfont=\normalfont,
qed=\qedsymbol
]{examplestyle}

\declaretheorem[parent=chapter,
style=examplestyle,
refname={example,examples},
Refname={Example,Examples}]{example}

\declaretheorem[style=remark, numbered=no]{remark}
              
