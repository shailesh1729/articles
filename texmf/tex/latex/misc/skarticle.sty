\declaretheoremstyle[
    headfont=\bfseries, 
    notebraces={[}{]},
    bodyfont=\normalfont,
    headpunct={},
    %postheadspace=\newline,
    %postheadhook={\textcolor{red}{\rule[.6ex]{\linewidth}{0.4pt}}\\},
    spacebelow=\parsep,
    spaceabove=\parsep,
    postfoothook={\vspace{0.4cm}},
    mdframed={
        backgroundcolor=AliceBlue, 
            linecolor=red!30,
